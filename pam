#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Check if a message was provided
if [ $# -eq 0 ]; then
    echo "Usage: pam your message here"
    exit 1
fi

# Process the message with the professional persona
"$SCRIPT_DIR/src/leah.py" --persona professional "$@" 