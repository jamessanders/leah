#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "$0" )" && pwd )"

# Check if a message was provided
if [ $# -eq 0 ]; then
    echo "Usage: frank your message here"
    exit 1
fi

# Pass all arguments to leah.py using absolute path, with specified voice, model, and tone
python3 "$SCRIPT_DIR/leah.py" --voice en-US-GuyNeural --model gemma-3-27b-it --tone serious "$@" 