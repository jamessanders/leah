#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "$0" )" && pwd )"

# Check if a message was provided
if [ $# -eq 0 ]; then
    echo "Usage: ann your message here"
    exit 1
fi

# Pass all arguments to leah.py using absolute path, with specified voice, model, and tone
python3 "$SCRIPT_DIR/leah.py" --voice en-US-AnaNeural --model deepseek-r1-distill-qwen-7b --tone cheerful "$@" 