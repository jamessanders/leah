#!/bin/bash

# Get the directory where this script is located
SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

# Check if a message was provided
if [ $# -eq 0 ]; then
    echo "Usage: ann your message here"
    exit 1
fi

# Call leah.py with the provided arguments
"$SCRIPT_DIR/src/leah.py" --voice en-CA-ClaraNeural --model deepseek-r1-distill-qwen-7b --tone cheerful "$@" 